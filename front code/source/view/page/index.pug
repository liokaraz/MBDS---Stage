extends ../base/layout-connection.pug
include ./mixin

block main
  .box-login
    .grid
      .grid__cell(class="1/3--desk 1/3--lap-and-up")
        .box-login-txt
          h1.box-login-txt-title bienvenue
          .box-login-txt-option
            p.txt-simple choisisser un type d'utilisateur
            +input-bloc-login ({
              name: "admin",
              label: "Admin",
              value: "0"
            })
            +input-bloc-login ({
              name: "distributeur",
              label: "Distributeur",
              value: "1"
            })
            +input-bloc-login ({
              name: "coursier",
              label: "Coursier",
              value: "2" 
            })
            +input-bloc-login ({
              name: "P.V",
              label: "P.V",
              value: "3" 
            })
            
      .grid__cell(class="2/3--desk 2/3--lap-and-up")
        .box-login-form
          h2.box-login-form-title <span class="txt-capitalize">veuiller</span> vous connectez !
          form.box-login-form-input(action="#" method="post") 
            input.input-txt(type="hidden" name="type-user" id="type-user" value="-1")
            input.input-txt(type="text" name="login" placeholder="Login" required="required")
            input.input-txt(type="password" name="password" placeholder="Mot de passe" required="required")
            input.btn-primary-border.btn-login(type="submit" value="Se connecter")