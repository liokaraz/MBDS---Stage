<!DOCTYPE html>
<html lang="en" dir="ltr">
@Html.Partial("~/Views/Layout/Head.cshtml")
<body>
    <div class="wrapper">
        @Html.Partial("~/Views/Layout/Header.cshtml")
        <main class="l-main">
            @Html.Partial("~/Views/Accueil/MapOptions.cshtml")
            <div class="grid">
                <div class="grid__cell 1/4--desk">
                    @Html.Partial("~/Views/Menu/MenuDistributeur.cshtml")
                </div>
                <div class="grid__cell 3/4--desk">
                    <div class="content">
                        <div class="content__header">
                            <h1 class="content__header-title">gestion point de vente</h1>
                            <p class="content__header-txt">Suivie des points de ventes (stock actuels, etc, ...)</p>
                        </div>
                        <div class="content__body">
                            <div class="content-link">
                                <a class="btn-warning btn-link btn-icon-sm" href="#">
                                    <img src="/image/print/list.png" alt="list" width="32" height="32">
                                    <p class="btn-icon-txt">Retour a la liste</p>
                                </a>
                            </div>
                            <div class="content-option">
                                <div class="input-bloc">
                                    <input class="input-checkbox js-all" id="js-map" type="radio" name="user" value="0" checked="checked"/>
                                    <label>Tous</label>
                                </div>
                                <div class="input-bloc">
                                    <input class="input-checkbox js-stock" id="js-map" type="radio" name="user" value="0" />
                                    <label>En rupture de stock</label>
                                </div>
                                
                            </div>          
                            <div class="content__body" id="js-content__body">
                                <div class="map" id="map"></div>
                                <div id="legend"><h3>Legend</h3></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        @Html.Partial("~/Views/Layout/Footer.cshtml")
        @Html.Partial("~/Views/Layout/Script.cshtml")
    </div>
</body>
</html>
