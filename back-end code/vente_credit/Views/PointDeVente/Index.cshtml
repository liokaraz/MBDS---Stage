<!DOCTYPE html>
<html lang="en" dir="ltr">
@Html.Partial("~/Views/Layout/Head.cshtml")
<body>
    <div class="wrapper">
        @Html.Partial("~/Views/Layout/Header.cshtml")
        <main class="l-main">
            @Html.Partial("~/Views/Accueil/notifAdd.cshtml")
            @Html.Partial("~/Views/PointDeVente/VenteCarteForm.cshtml")
            @Html.Partial("~/Views/PointDeVente/DetailVenteCarte.cshtml")
            <div class="grid">
                <div class="grid__cell 1/4--desk">
                    @Html.Partial("~/Views/Menu/MenuPointDeVente.cshtml")
                </div>
                <div class="grid__cell 3/4--desk">
                    <div class="content">
                        <div class="content__header">
                            <h1 class="content__header-title">gestion carte</h1>
                            <p class="content__header-txt">C'est la section où l'on gère la distribution des cartes de crédits</p>
                        </div>
                        <div class="content__body">
                            <div class="content__body-link">
                                <a class="btn-success-dark btn-link btn-icon" href="#">
                                    <img src="/image/print/excel.png">
                                    <p class="btn-icon-txt">Version Excel</p>
                                </a>
                                
                            </div>
                            <div class="content__body-table" id="js-content__body">
                                <table class="table-default table-liste">
                                    <thead>
                                        <td class="table-header">Carte</td>
                                        <td class="table-header">Nombre</td>
                                        <td class="table-header">Options</td>
                                    </thead>
                                    <tbody>
                                        @foreach (var livraison in ViewBag.ListeLivraison) 
                                        {
                                            <tr class="table-body table-body-light table-body-row">
                                                <td>@livraison.Carte</td>
                                                <td>@livraison.Quantite</td>
                                                <td>
                                                    <div class="table-body-option">
                                                        <a class="btn-primary btn-link btn-icon-sm js-btn-market" href="javascript:void(0)" onclick="showFormCardSale(@livraison.Id, '@livraison.PointDeVente')">
                                                            <img src="/image/print/market.png" alt="delivery" width="24" height="24">
                                                            <p class="btn-icon-txt">ajouter carte vendues</p>
                                                        </a>
                                                        <a class="btn-warning btn-link btn-icon-sm js-btn-sale-detail" href="javascript:void(0)" onclick="showFormDetailVente(@livraison.Id)">
                                                            <img src="/image/print/detail.png" alt="details" width="24" height="24">
                                                            <p class="btn-icon-txt">Details</p>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        @Html.Partial("~/Views/Layout/Footer.cshtml")
        @Html.Partial("~/Views/Layout/Script.cshtml")
    </div>
</body>
</html>