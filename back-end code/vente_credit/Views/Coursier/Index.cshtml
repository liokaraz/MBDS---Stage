<!DOCTYPE html>
<html lang="en" dir="ltr">
@Html.Partial("~/Views/Layout/Head.cshtml")
<body>
    <div class="wrapper">
        @Html.Partial("~/Views/Menu/MenuDistributeurMobile.cshtml")
        @Html.Partial("~/Views/Layout/Header.cshtml")
        <main class="l-main">
            @Html.Partial("~/Views/Notification/NotifAdd.cshtml")
            @Html.Partial("~/Views/Coursier/FormLivraison.cshtml")
            @Html.Partial("~/Views/Coursier/FormDetailLivraison.cshtml")
            <div class="grid">
                <div class="grid__cell 1/4--desk">
                    @Html.Partial("~/Views/Menu/MenuCoursier.cshtml")
                </div>
                <div class="grid__cell 3/4--desk">
                    <div class="content">
                        <div class="content__header">
                            <h1 class="content__header-title">gestion carte</h1>
                            <p class="content__header-txt">C'est la section où l'on gère la distribution des cartes de crédits</p>
                        </div>
                        <div class="content__body">
                            <div class="content__body-link">
                                <a class="btn-success-dark btn-link btn-icon" href="#">
                                    <img src="/image/print/excel.png">
                                    <p class="btn-icon-txt">Version Excel</p>
                                </a>
                                <a class="btn-primary btn-link btn-icon btn-pdf" href="#">
                                    <img src="/image/print/search.png">
                                    <p class="btn-icon-txt">Recherche</p>
                                </a>
                            </div>
                            <div class="content__body-table" id="js-content__body">
                                <table class="table-default table-liste">
                                    <thead>
                                        <td class="table-header">carte</td>
                                        <td class="table-header">nombres</td>
                                        <td class="table-header">Options</td>

                                    </thead>
                                    <tbody>
                                        @foreach (var stock in ViewBag.listStock)
                                         {
                                            <tr class="table-body table-body-light table-body-row" ondblclick="">
                                                <td>@stock.Carte</td>
                                                <td>@stock.Stock </td>
                                                <td>
                                                    <div class="table-body-option">
                                                        <a class="btn-primary btn-link btn-icon-sm js-btn-delivery" href="javascript:void(0)" onclick="showFormLivraison(@stock.Id)">
                                                            <img src="/image/print/delivery2.0.png" alt="delivery" width="24" height="24">
                                                            <p class="btn-icon-txt">Livrer</p>
                                                        </a>
                                                        <a class="btn-warning btn-link btn-icon-sm js-btn-detail" href="javascript:void(0)" onclick="showDetailsLivraison(@stock.Id)">
                                                            <img src="/image/print/detail.png" alt="details" width="24" height="24">
                                                            <p class="btn-icon-txt">Details</p>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                         }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        @Html.Partial("~/Views/Layout/Footer.cshtml")
        @Html.Partial("~/Views/Layout/Script.cshtml")
    </div>
</body>
</html>